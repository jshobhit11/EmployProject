<% layout('layouts/boilerplate')%>
<h1>Welcome new employee</h1>
<form action="/employs" method="POST" novalidate class="validated-form">
<label for="name">Employ name</label>
<input type="text" name="name" placeholder="employ name" id="name" required>
<br></br>

<label for="salary">Employ salary</label>
<input type="number" name="salary" placeholder="employ salary" id="salary" required>
<br></br>

<label for="age">Employ Age</label>
<input type="number" name="age" placeholder="employ Age" id="age" required>
<br></br>
<button>Submit</button>
</form>
    
